<?xml version="1.0"?>
<ruleset name="Laravel Standards">
    <description>PSR-12 Laravel Coding Standards</description>

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>
    <file>tests</file>

    <rule ref="PSR12"/>
    
    <!-- Exclude some PSR-12 rules that Laravel doesn't follow -->
    <rule ref="PSR12.Classes.OpeningBraceSpace">
        <exclude-pattern>*</exclude-pattern>
    </rule>
    <rule ref="PSR12.Functions.ReturnTypeDeclaration">
        <exclude-pattern>*</exclude-pattern>
    </rule>
</ruleset> 